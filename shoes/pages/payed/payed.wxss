/* pages/payed/payed.wxss */
.payed_body{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
}
.payed_box{
  width: 750rpx;
  height: 300rpx;
  background-color: #ff5e46;
}
.cart_icon{
  width: 240rpx;
  height: 110rpx;
  margin: 40rpx 0 0 215rpx;
}
.payed_text{
  display: block;
  width: 750rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}
.payment_box{
  width: 750rpx;
  text-align: center;
  margin-top: 36rpx;
}
.payment_text{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}
.payment_money{
  font-size: 32rpx;
  color: #ff5e46;
  font-weight: bold;
}
.payment_msg_box{
  width: 750rpx;
  margin-top: 70rpx;
  padding-left: 40rpx;
}
.payment_name,.payment_telephone,.payment_address{
  display: block;
  font-size: 28rpx;
  color: #666;
}
.router_box{
  width: 390rpx;
  margin: 0 auto;
  margin-top: 120rpx;
}
.router_order,.router_home{
  width: 150rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #ff5e46;
  border: 2rpx solid #ff5e46;
  border-radius: 30rpx;
  text-align: center;
}
.router_order{
  float: left;
}
.router_home{
  float: right;
}