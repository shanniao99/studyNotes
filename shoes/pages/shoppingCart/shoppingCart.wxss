/* pages/shoppingCart/shoppingCart.wxss */
scroll-view {
  position: fixed;
  top: 0;
  bottom: 90rpx;
  background-color: #fff;
}

.boxStyle {
  position: relative;
  display: block;
  height: 240rpx;
  width: 910rpx;
  padding: 0 20rpx 0 0;
  border-bottom: 1rpx solid #eee;
  transform: translateX(0);
  transition: all 0.4s;
}


.touch-move-active {
  /* -webkit-transform: translateX(0); */
  transform: translateX(-160rpx);
  transition: all 0.4s;
}

.labelStyle {
  display: inline-block;
  width: 40rpx;
  height: 240rpx;
  padding-left: 20rpx;
}

.selectIcon {
  position: absolute;
  top: 50%;
  transform: translate(0, -50%);
}

.selectIcon .wx-checkbox-input {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border-color: #ff5e46;
}

.selectIcon .wx-checkbox-input.wx-checkbox-input-checked {
  background: #ff5e46;
}

.selectIcon .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.productImg {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx 0 0 10rpx;
  vertical-align: top;
}

.contentBody {
  position: absolute;
  left: 290rpx;
  top: 0;
  width: 460rpx;
  height: 240rpx;
  padding: 0 20rpx;
}

.productTitle {
  display: block;
  font-size: 28rpx;
  color: #666666;
  font-weight: bold;
  margin-top: 30rpx;
}

.bottomBox {
  height: 110rpx;
  width: 420rpx;
  margin-top: 50rpx;
}

.sizeBox {
  width: 95rpx;
  height: 30rpx;
  background-color: #eeeeee;
  border-radius: 4rpx;
}

.colerText {
  font-size: 22rpx;
  color: #999999;
  vertical-align: top;
  margin-left: 5rpx;
}

.sizeText {
  font-size: 22rpx;
  color: #999999;
  vertical-align: top;
  margin-left: 10rpx;
}

.arrowIcon {
  width: 20rpx;
  height: 13rpx;
  margin-left: 10rpx;
  vertical-align: top;
  margin-top: 10rpx;
}

.priceText {
  font-size: 32rpx;
  color: #ff5e46;
  font-weight: bold;
  margin-top: 10rpx;
}

/*主容器*/
.stepper {
  position: absolute;
  width: 160rpx;
  height: 52rpx;
  /*给主容器设一个边框*/
  border: 1rpx solid #ccc;
  border-radius: 6rpx;
  right: 20rpx;
  bottom: 30rpx;
}

/*加号和减号*/
.stepper text {
  width: 36rpx;
  line-height: 52rpx;
  text-align: center;
  float: left;
}

/*数值*/
.stepper input {
  width: 80rpx;
  height: 50rpx;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 24rpx;
  /*给中间的input设置左右边框即可*/
  border-left: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
}

/*普通样式*/
.stepper .normal {
  color: black;
}

/*禁用样式*/
.stepper .disabled {
  color: #ccc;
}

.deleteBtn {
  position: absolute;
  top: 0;
  right: 0;
  width: 160rpx;
  line-height: 240rpx;
  background-color: #f51f24;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
}

.footer {
  position: fixed;
  bottom: 0;
  height: 90rpx;
  width: 750rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #eeeeee;
}

.selectBtn {
  float: left;
  line-height: 90rpx;
  font-size: 40rpx;
  transform: scale(0.8);
}

.selectBtn .wx-radio-input {
  border-color: #ff5e46;
}

.totalPrice {
  float: left;
  line-height: 90rpx;
  margin-left: 30rpx;
}

.totalPriceText {
  font-size: 32rpx;
  color: #ff5e46;
  font-weight: bold;
}

.settlementBtn {
  position: fixed;
  bottom: 0;
  right: 0;
  width: 217rpx;
  line-height: 90rpx;
  background-color: #ff5e46;
  font-size: 32rpx;
  color: #ffffff;
  text-align: center;
}