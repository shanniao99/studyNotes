/* pages/myOrder/myOrder.wxss */
.my_order_body {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
}

.header_body {
  display: flex;
  width: 750rpx;
  height: 80rpx;
  border-bottom: 1rpx solid #eee;
  justify-content: space-around;
}

.nav_box {
  line-height: 80rpx;
  font-size: 32rpx;
}

.nav_border_style {
  border-bottom: 3rpx solid #ff5e46;
}
.my_order_box{
  position: fixed;
  top: 80rpx;
  bottom: 0;
  left: 0;
  right: 0;
}

.order_item_content {
  width: 710rpx;
  height: 290rpx;
  margin: 20rpx auto;
  border-radius: 10rpx;
  border: 1px solid #eee;
}
.item_order_header{
  width: 670rpx;
  line-height: 70rpx;
  margin: 0 auto;
}
.order_number{
  font-size: 28rpx;
  color: #999;
}
.order_state{
  float: right;
  font-size: 28rpx;
  color: #ff5e46;
}
.order_image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.order_information_box{
  float: right;
  margin-right: 20rpx;
  width: 450rpx;
  height: 160rpx;
}
.order_information_header{
  width: 450rpx;
  line-height: 30rpx;
}
.order_information_title{
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}
.order_information_num{
  display: block;
  float: right;
  font-size: 28rpx;
  color: #999;
  font-weight: bold;
}
.order_information_content{
  width: 450rpx;
  height: 100rpx;
  margin-top: 60rpx;
}
.order_color_size{
  float: left;
}
.order_Size{
  font-size: 22rpx;
  color: #999;
  font-weight: bold;
}
.order_price{
  font-weight: bold;
  color: #ff5e46;
  font-size: 32rpx;
  margin-top: 25rpx;
}
.order_btn{
  width: 130rpx;
  line-height: 50rpx;
  float: right;
  font-size: 22rpx;
  color: #fff;
  text-align: center;
  border-radius: 25rpx;
  background-color: #ff5e46;
  margin-top: 50rpx;
}